{
  "name": "react-wavesurfer.js",
  "version": "0.0.4",
  "description": "React bindings for wavesurfer.js",
  "keywords": [
    "react",
    "wavesurfer.js",
    "wavesurfer",
    "waveform",
    "typescript",
    "ts",
    "tsx",
    "spectrogram",
    "microphone",
    "canvas",
    "pan",
    "zoom",
    "timeline"
  ],
  "license": "MIT",
  "author": "Amila Welihinda <amilajack@gmail.com>",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && yarn build-storybook && rm -rf storybook-static",
    "docs": "rm -rf docs && typedoc ./src --out",
    "lint": "eslint . --ignore-pattern dist --fix",
    "start": "yarn storybook",
    "test": "yarn build && jest && tsc",
    "release": "standard-version",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "createDefaultProgram": true,
      "ecmaVersion": 2020,
      "project": "./tsconfig.json",
      "sourceType": "module",
      "tsconfigRootDir": "."
    },
    "extends": [
      "bliss-typescript"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/prefer-default-export": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-addons-test-utils": "^0.14.26",
    "@types/react-dom": "^17.0.9",
    "@types/wavesurfer.js": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "canvas": "^2.8.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-bliss-typescript": "^5.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.21.7",
    "typescript": "^4.4.2",
    "wavesurfer.js": "^5.2.0"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "wavesurfer.js": "^5.0.0"
  },
  "renovate": {
    "extends": [
      "bliss"
    ]
  }
}
